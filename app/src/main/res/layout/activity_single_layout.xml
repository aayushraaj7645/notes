<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".single_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#275F89"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tittle_box"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="#CB9D9D"
                android:ems="10"
                android:hint="tittle"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/notes_data"
                android:layout_width="match_parent"
                android:layout_height="257dp"
                android:background="#F2EDE071"
                android:ems="10"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:gravity="start"
                android:hint="notes_data"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:maxLines="10"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_weight="1"
                android:background="#F6F2F2"
                app:srcCompat="@drawable/delete_key" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>